---
type Props = {
  title: string;
  description: string;
  number: string;
};

const { description, number, title } = Astro.props;
---

<li class="rounded-4xl p-12 space-y-4 bg-txt-500 md:rounded-[56px]">
  <p class="font-monument text-lg text-txt-200 md:text-3xl">{number}</p>
  <p class="font-monument text-xs md:text-2xl">{title}</p>
  <p class="text-xxs leading-[170%] md:text-lg text-txt-400">{description}</p>
</li>
