---
import { getLangFromUrl, useTranslations } from "@/lib/utils";
import { Image } from "astro:assets";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const services = [t("services.1"), t("services.2"), t("services.3")];
---

<div class="relative mt-[90px] lg:mt-[121px] md:pl-10">
  <div
    class="absolute hidden md:block -rotate-90 bg-primary px-6 py-4 -translate-x-16 text-white left-0 top-0 font-medium uppercase"
  >
    <p>{t("services.side-title")}</p>
  </div>
  <section
    class="wrapper grid md:grid-cols-2 lg:grid-cols-3 md:grid-rows-[auto,1fr,1fr] md:ml-4 gap-y-5 gap-x-6"
  >
    <h2
      class="font-monument text-center col-span-full md:text-left lg:text-4.5xl"
    >
      {t("services.title")}
      <span
        class="-skew-x-[10deg] bg-primary rounded-sm p-1 leading-tight inline-block text-white"
        ><span>{t("services.marked-title")}</span></span
      >
    </h2>
    <div class="mt-6 md:mt-0 row-span-2">
      <p class="text-xxs leading-[170%] text-center md:text-left md:text-xl">
        {t("services.subtitle")}
      </p>
      <ul class="mt-8.5 flex gap-8 flex-col">
        {
          services.map((service, index) => (
            <li class="flex gap-3  rounded-5xl items-center px-10 py-8 border border-txt-400 text-sm font-medium text-foreground md:text-xl">
              <span class="font-monument text-lg">0{index + 1}</span>
              <p>{service}</p>
              {/* Add right arrow only on desktop */}
            </li>
          ))
        }
      </ul>
    </div>
    <Image
      class="rounded-2.5xl hidden md:block h-full object-cover object-center row-span-2"
      src="https://placehold.co/455x580"
      width={455}
      height={508}
      alt=""
    />
    <div
      class="hidden md:flex rounded-4xl bg-txt-500 p-8 flex-col justify-between text-white"
    >
      <p class="text-lg leading-[170%]">
        {t("services.link-card-black-description")}
      </p>
      <div class="flex justify-between items-center font-semibold">
        <p class="text-2xl">{t("services.link-card-black-link")}</p>
        <div
          class="size-16 flex items-center justify-center text-lg rounded-full bg-txt-600"
        >
          &darr;
        </div>
      </div>
    </div>
    <div
      class="hidden md:flex rounded-4xl bg-primary p-8 flex-col justify-between text-txt-100"
    >
      <p class="text-lg leading-[170%]">
        {t("services.link-card-primary-description")}
      </p>
      <div class="font-semibold flex justify-between items-center">
        <p class="text-2xl">{t("services.link-card-primary-link")}</p>
        <div>
          <div
            class="size-16 flex items-center justify-center text-lg rounded-full bg-white"
          >
            &darr;
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
