---
import footerImage from "@/assets/images/bold-labs-logo.png";
import { getLangFromUrl, useTranslations } from "@/lib/utils";
import Image from "astro/components/Image.astro";
import SocialMediaLink from "./common/SocialMediaLink.astro";
import InstagramIcon from "./svg/InstagramIcon.astro";
import LinkedInIcon from "./svg/LinkedInIcon.astro";
const year = new Date().getFullYear();
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-txt-100 text-white pt-14 pb-8 mt-32 md:mt-20">
  <div class="wrapper">
    <div class="flex flex-col md:flex-row mb-8 justify-between">
      <div>
        <Image
          src={footerImage}
          alt="Bold Labs Logo"
          width={300}
          height={196}
          class="max-w-[240px] mx-auto lg:max-w-none"
        />
        <p class="font-monument text-3xl text-center mt-5 mb-7">
          {t("footer.text")}
        </p>
      </div>
      <div>
        <p class="text-center md:text-left md:text-2xl font-bold">Contacto</p>
        <p class="text-center my-3 md:text-left text-xs md:text-base">
          <strong>Email</strong><br /><a
            class="hover:underline"
            href="mailto:admboldmedia@gmail.com">admboldmedia@gmail.com</a
          >, <a
            class="underline md:no-underline hover:underline"
            href="mailto:nahary.boldlabs@gmail.com">nahary.boldlabs@gmail.com</a
          >
        </p>
        <p class="text-center my-3 md:text-left text-xs md:text-base">
          <strong>Endereço</strong><br /><a
            class="underline md:no-underline hover:underline"
            href="https://maps.app.goo.gl/bsLhb5c62yw626Sp8"
            target="_blank"
            >Rua do Colégio Angolano de Talatona, Edificio Sanzel<br />Talatona,
            Luanda, Angola</a
          >
        </p>
      </div>
    </div>
    <div
      class="flex flex-col-reverse gap-10 items-center text-center md:flex-row md:justify-between"
    >
      <p class="text-xs md:text-lg">{t("footer.copy", String(year))}</p>
      <ul class="flex justify-center gap-4 items-center">
        <SocialMediaLink
          title="Instagram"
          href="https://www.instagram.com/boldlabsao"
        >
          <InstagramIcon slot="icon" />
        </SocialMediaLink>
        <!-- <SocialMediaLink href="https://www.facebook.com/">
          <FacebookIcon slot="icon" />
        </SocialMediaLink>
        <SocialMediaLink href="https://x.com/">
          <XIcon slot="icon" />
        </SocialMediaLink> -->
        <SocialMediaLink
          title="Linkedin"
          href="https://www.linkedin.com/company/bold-labsao/"
        >
          <LinkedInIcon slot="icon" />
        </SocialMediaLink>
      </ul>
    </div>
  </div>
</footer>
